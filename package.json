{
  "name": "blogify",
  "version": "1.0.0",
  "description": "A modern blog application built with Node.js, Express, and MongoDB",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "mkdir -p dist && cp -r . dist/ && cd dist && npm install --production && rm -rf dist/node_modules/.cache",
    "ci": "npm ci && npm run build"
